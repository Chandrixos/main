                var name = '<a href="/userchat?id=' + ids_list[i] + '">' + names_from_main_list[i] + '</a'
                var li = document.createElement('li');
                li.innerHTML = name;
                messages2.appendChild(li);
            }
        }


    }
    window.onload = codeAddress;
</script>



